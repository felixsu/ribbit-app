<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parseUserContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/statelist_item_background"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/vertical_separator_half"
    android:paddingTop="@dimen/vertical_separator_half">

    <RelativeLayout
        android:id="@+id/view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_default"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_profile"
            android:paddingLeft="24dp">

            <TextView
                android:id="@+id/label_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="@string/item_nameLabel"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/container_empty_add_friend"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:visibility="gone">

        <TextView
            android:id="@+id/text_empty_add_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:maxLength="20"
            android:maxLines="1"
            android:text="Pull to refresh"
            android:textSize="21sp"
            />

        <View
            android:id="@+id/view_empty_separator"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/text_empty_add_friend"
            android:background="@color/transparent_grey"/>
    </RelativeLayout>
</RelativeLayout>