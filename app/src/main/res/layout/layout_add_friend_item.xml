<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parseUserContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@drawable/bg_ripple"
    android:clickable="true"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/vertical_separator_half"
    android:paddingTop="@dimen/vertical_separator_half">

    <RelativeLayout
        android:id="@+id/view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_circle_48"
            android:scaleType="fitXY"
            android:src="@drawable/ic_user_default"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_profile"
            android:paddingLeft="24dp">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:textColor="@color/colorBlack"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="@string/item_nameLabel"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>