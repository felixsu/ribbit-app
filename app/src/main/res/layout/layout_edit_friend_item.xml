<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/parseUserContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/statelist_item_background"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/vertical_separator_half"
    android:paddingTop="@dimen/vertical_separator_half">

    <RelativeLayout
        android:id="@+id/view_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/image_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_profile"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/image_profile"
            android:paddingLeft="24dp">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="21sp"
                android:textStyle="bold"
                tools:text="@string/item_nameLabel"/>

            <TextView
                android:id="@+id/field_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_name"
                android:paddingTop="4dp"
                tools:text="@string/item_statusLabel"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>